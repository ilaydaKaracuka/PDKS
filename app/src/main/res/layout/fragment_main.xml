<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"

    tools:context=".MainFragment">


    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:layout_marginTop="40dp"
        android:dateTextAppearance="@style/TextAppearance.AppCompat.Medium"
        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Small"
        android:showWeekNumber="false"
        android:firstDayOfWeek="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginBottom="36dp"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnGiris"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giriş Kaydı"
            android:layout_marginRight="10dp"
            app:cornerRadius="10dp"
            android:textSize="17sp"
            app:strokeWidth="2dp"
            android:backgroundTint="@color/mavi_buton"
            app:strokeColor="@color/mavi_buton_kenarlik"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_bold" />

        <Button
            android:id="@+id/btnCikis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cornerRadius="10dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/mavi_buton_kenarlik"
android:textSize="17sp"
            android:backgroundTint="@color/mavi_buton"
            android:text="Çıkış Kaydı"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_bold" />
    </LinearLayout>

</LinearLayout>

