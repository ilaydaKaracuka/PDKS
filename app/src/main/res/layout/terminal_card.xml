<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="227dp"
    android:layout_height="210dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp"
    app:strokeColor="@color/gri"
    app:strokeWidth="2dp"
    android:layout_gravity="center_horizontal"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="3dp"

        android:gravity="center_horizontal"
        android:divider="@android:color/transparent"
        android:showDividers="middle"
        android:dividerPadding="4dp">

        <ImageView
            android:id="@+id/terminal_image"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/a_blok" />

        <TextView
            android:id="@+id/terminal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esenler- A Blok"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:textAlignment="center"
            android:maxLines="1"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/terminal_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konum:"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical|start"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/terminal_coordinate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="41.0382184, 28.8866255"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical|start"
                android:ellipsize="none"
                android:singleLine="true"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"

            android:gravity="center_vertical">

            <TextView
                android:id="@+id/terminal_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min Mesafe:"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical|start"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/terminal_distance_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50 m."
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical|start"
                android:ellipsize="none"
                android:singleLine="true"
               />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
