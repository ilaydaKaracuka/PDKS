<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <org.osmdroid.views.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/zoom_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="99dp">

        <ImageView
            android:id="@+id/btn_zoom_in"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/plus"
            android:contentDescription="Zoom In"
           />

        <ImageView
            android:id="@+id/btn_zoom_out"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/minus"
            android:contentDescription="Zoom Out"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/map_type_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/btn_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standart"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/turuncu_buton"
            app:cornerRadius="10dp"
            app:strokeColor="@color/turuncu_buton_kenarlik"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn_satellite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uydu"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/turuncu_buton"
            app:cornerRadius="10dp"
            app:strokeColor="@color/turuncu_buton_kenarlik"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn_hybrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hibrit"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/turuncu_buton"
            app:cornerRadius="10dp"
            app:strokeColor="@color/turuncu_buton_kenarlik"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Çıkış Konumu Kaydet"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:layout_gravity="bottom"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="46dp"
        android:backgroundTint="@color/acik_mavi"
        app:cornerRadius="10dp"
        app:strokeColor="@color/mavi_buton_kenarlik"
        app:strokeWidth="2dp"/>

    <ImageView
        android:id="@+id/location_icon2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/location_icon"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="109dp"
        android:contentDescription="Location Icon"/>
</FrameLayout>
